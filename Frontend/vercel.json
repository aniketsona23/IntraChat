{
  "version": 2,
  "builds": [{ "src": "/public/**", "use": "@vercel/static" }],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/chat/(.*)", "dest": "/public/client.html" },
    {
      "src": "/js/(.*)",
      "methods": ["GET"],
      "dest": "/public/js/$1"
    },
    {
      "src": "/css/(.*)",
      "methods": ["GET"],
      "dest": "/public/css/$1"
    }
  ]
}
